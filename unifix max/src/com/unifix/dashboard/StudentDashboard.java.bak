            updateComplaintCounts();
            
            // Update stats on home page with actual data
            updateHomePageStats();
            
            // Refresh requests panel to show current data
            refreshRequestsPanel();
        } catch (Exception e) {
            System.out.println("Error updating user interface: " + e.getMessage());
            e.printStackTrace();
        }
    }
    
